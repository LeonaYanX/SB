@using SB.ViewModels

@model IEnumerable<BookVM>  

@if (Model.Count()== 0)
{
    <h3>Nothing found</h3>

}

@foreach (var b in Model)
{
    <tr>

        @foreach (var i in b.Src)
        {
            <img src= @i alt="Photo" />
            
        }

        @Html.Display("Title")
       
        @Html.Display("Author")
        <br />
         <td>@b.Swap</td>
        
         <b>Price: </b>
        <td>@b.Price</td> 
        @Html.Display("Info")
     
    </tr>
   
    
    @* Nado podstavit otdelno na odnoj strance   @Html.ActionLink("More", "Index", "BookCategoryMore") *@
  
    @Html.ActionLink("More", "Index", "BookCategoryMore", new { idBook = b.Id })
    
    <br />
}

