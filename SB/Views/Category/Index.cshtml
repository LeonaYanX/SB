
@model IEnumerable<Book>

@if (Model.Count()== 0)
{
    <h3>Nothing found</h3>

}

@foreach (var b in Model)
{
    <tr>
        <td>@b.Galaries</td>
        <td>@b.Title</td>
        <br />
        <td>@b.Author</td>
        <br />
        <td>@b.Price</td>
        @switch (b.Swap)
        {
            case 1:
                <h3>Swapable</h3>
                break;
            case 0:
                <h3>Not Swapable</h3>
                break;
            default:
                <h3>Not Specified</h3>
                break;
        
        }
        <td>
            <textarea name="Info">@b.Info</textarea>
        </td>
        <input type="submit" value="More" /> @* Nado podstavit
    @Html.ActionLink("More","Index","Category");<br/>
    *@
    </tr>
    
}
@Html.ActionLink("More", "Index", "BookCategoryMore");
